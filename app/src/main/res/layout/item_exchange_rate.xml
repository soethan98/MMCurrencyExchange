<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/padding_common">

    <ImageView
        android:id="@+id/imgFlag"
        android:src="@drawable/ic_new_zealand"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCurrency"
        app:layout_constraintBottom_toBottomOf="@id/tvCountryName"/>

    <TextView
        android:id="@+id/tvCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hello World"
        android:layout_marginStart="@dimen/margin_small"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintStart_toEndOf="@id/imgFlag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hello World"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintStart_toEndOf="@id/imgFlag"
        android:textAppearance="?textAppearanceCaption"
        app:layout_constraintTop_toBottomOf="@id/tvCountryName" />

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30.5"
        android:textAppearance="?textAppearanceBody2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCountryName"
        app:layout_constraintBottom_toBottomOf="@id/tvCurrency"/>


</androidx.constraintlayout.widget.ConstraintLayout>